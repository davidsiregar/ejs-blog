<%-include('../includes/head.ejs')%>

  <body>
    <%-include('../includes/navigate.ejs')%>
      <% if (blogs.length>0){%>
        <%for (let blog of blogs) {%>

          <section class="main-blog">
            <div class="main-blog-list">
              <div class="main-blog-list__left">
                <span class="main-blog__name">
                  <%= blog.username%>
                </span>
                <h1 class="main-blog__title">
                  <%= blog.title%>
                </h1>
                <p class="main-blog__desc">
                  <%= blog.description%>
                </p>
                <div class="trending-time">
                  <span class="date">
                    <%=blog.dateTime%>
                  </span>
                  <span class="time-read">2min read</span>
                </div>
              </div>
              <div class="main-blog-list__right">
                <img src="/<%=blog.imageUrl%>"
                  alt="<%=blog.title%>"
                  class="blog-image" />
              </div>
            </div>

            <div class="card__actions">
              <a href="/blog/edit-blog/<%= blog._id %>?edit=true"
                class="btn-edit">Edit</a>
              <input type="hidden" value="<%= blog._id %>"
                name="blogId">
              <input type="hidden" name="_csrf"
                value="<%= csrfToken %>">
                <a href="/blog/view-blog/<%=blog._id%>" class="btn-detail">Detail</a>
                
                <button class="btn-delete" type="button"
                onclick="deleteBlog(this)">Delete</button>
            </div>
          </section>
          <%}%>

              <%} else {%>
                <h1>No Product Found!</h1>
                <%}%>

                  <%-include('../includes/end.ejs')%>
                    <script src="/js/blog.js"></script>